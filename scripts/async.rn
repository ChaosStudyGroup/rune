use http;

fn test(timeout) {
    let request = http::get(`http://httpstat.us/200?sleep={timeout}`);
    let timeout = time::delay_for(time::Duration::from_secs(2));

    let result = select {
        res = request => res?,
        _ = timeout => {
            return error("timed out");
        }
    };

    dbg(result);
    dbg(result.text().await?);
    ok(())
}

fn main() {
    dbg(test(1000));
    dbg(test(5000));
}