use process::Command;

fn main() {
    let projects = [
        "crates/rune-testing",
        "crates/rune-modules",
        "crates/rune-testing",
        "crates/runestick",
    ];

    for project in projects {
        let cargo = Command::new("cargo");
        cargo.args(["readme", "-r", project, "-o", "README.md", "-t", "../../README.tpl"]);
        let status = cargo.spawn()?.await?;
        println(`{project}: {status}`);
    }
}